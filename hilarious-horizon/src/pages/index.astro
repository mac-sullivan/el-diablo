---
import { getCollection } from 'astro:content';
const pages = await getCollection('pages');
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Site</title>
  </head>
  <body>
    {pages.map(page => (
      <div>
        <h1>{page.data.title}</h1>
        <p>{page.data.body}</p>
      </div>
    ))}
  </body>
</html>